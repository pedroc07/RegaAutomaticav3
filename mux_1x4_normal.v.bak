// Declaracao do modulo do multiplexador de 4 saidas e 1 entrada com seletor de 2 bits logica NORMAL.
module mux_1x4_normal (in, out, S1, S0, A0, A1, A2, A3);

	 // Declaracao de portas
    input in;           // Entrada única
    input S1, S0;      // Seletor de 2 bits
    input A0, A1, A2, A3, 
	 output out;  // saída

    // Declaração de fios para os complementos do seletor
    wire notS0, notS1;

    // Inversores para os bits do seletor
    not (notS0, S0);
    not (notS1, S1);
	 
	 // Decodificador para cada saída do demux 1x7 usando portas "OR" para saida de valor logico BAIXO
    and (A0, in, S1, S0);       // S == 00
    and (A1, in, S1, notS0);      // S == 01
    and (A2, in, notS1, S0);     // S == 10
    and (A3, in, notS1, notS0);    // S == 11
	 
	 or(out, Out0, Out1, Out2, Out3);

endmodule 